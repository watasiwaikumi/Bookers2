     <p id="notice">
       <%= flash[:notice] %>
     </p>
  <% end %>

  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @users, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
       <table class="table">
      
          <tr>
          <% if user_signed_in? %>
          <th>name</th><th><%= current_user.name %></th>
          <% end %>
          </tr>
    
          <tr>
          <% if user_signed_in? %>
          <th>introduction</th><th><%= current_user.introduction %></th>
          <% end %>
          </tr>
      </table>


  <%= link_to "", edit_user_path(@users), class:"btn btn-outline-secondary btn-block fas fa-user-cog edit_user_id"%>



      <h2>New book</h2>

      <%= form_with model:@book, local:true do |f| %>

          <div class="field">

            <div class="form-group">
            <label for="book_title">Title</label>
            <div><%= f.text_field :title, class: "form-control" %></div>
            </div>

          <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <div><%= f.text_area :body, class: "form-control" %></div>
          </div>

          <div class="form-group">
          <%= f.submit 'Create Book', class: "btn btn-success" %>
          </div>
          </div>

      <% end %>
</div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
    <thead>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </thead>
  
      </table>
    </div>
  </div>
