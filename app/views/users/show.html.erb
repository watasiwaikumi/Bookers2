<% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
  <% end %>

  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 63, 63, format: 'jpeg', fallback: "no_image.jpg" %>
       <table class="table">

          <tr>
          <th>name</th><th><%= @user.name %></th>
          </tr>

          <tr>
          <th>introduction</th><th><%= @user.introduction %></th>
          </tr>
      </table>


  <%= link_to "", edit_user_path(@user), class:"btn btn-outline-secondary btn-block fas fa-user-cog edit_user_id"%>



      <h2>New book</h2>

      <%= form_with model:@book, local:true do |f| %>

          <div class="field">

            <div class="form-group">
            <label for="book_title">Title</label>
            <div><%= f.text_field :title, class: "form-control" %></div>
            </div>

          <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <div><%= f.text_area :body, class: "form-control" %></div>
          </div>

          <div class="form-group">
          <%= f.submit 'Create Book', class: "btn btn-success" %>
          </div>
          </div>

      <% end %>
</div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
    <thead>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </thead>

    <% @user.books.each do |book| %>
    <tr>
        <td><%= link_to(book_path(book.id)) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 63, 63, format: 'jpeg', fallback: "no_image.jpg" , size: "40x40"%></br>
            <%=book.title %>
            <% end %>
       </td>
       <td><%=book.body %></td>
       </tr>
    <% end %>

      </table>
    </div>
  </div>
</div>